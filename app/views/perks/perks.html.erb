<div class="hero">
  <h1>Employee Happiness Made Simple</h1>
</div>

<% if current_user %>
  <div class="user-favorite">
    <%= render "favorites/favorites" %>
  </div>
<% else %>
  <div class="container how-to row">
    <div class="three columns">three</div>
    <div class="three columns">three</div>
    <div class="three columns">three</div>
  </div>
<% end %>

<div class=search>
  <form>
    <input type="text" id='location' name="Location">
    <input type="submit" id='address' value="Find Perks Near You">
  </form>
</div>

<div id="map"></div>

<div class="list-category">
  <h2>Want to Know What Perks You can Have?</h2>
    <% @categories.each do |category| %>
      <div class="two columns category">
        <button><%= category.name %></button>
      </div>
    <% end %>
</div>
<div class="container list-perks"></div>
<button class="button-primary">Show Me All the Perks</button>
<div class=question>
</div>
<script async defer
      src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLE_KEY']%>&callback=initMap"></script>
